
CREATE DATABASE collegeDB;
USE collegeDB;
 

CREATE TABLE students (
    student_id INT PRIMARY KEY,
    student_name VARCHAR(50),
    marks INT
);
 
INSERT INTO students VALUES
(1, 'Arjun', 75),
(2, 'Meera', 82),
(3, 'Rohit', 68);
SET autocommit = 0;
-- 1.Increase Meera’s marks and COMMIT 
update students
set marks =marks+10
where student_name = 'Meera';
commit;

-- 2.Reduce Rohit’s marks and ROLLBACK
update students
set marks =marks-10
where student_name = 'Rohit';
select * from students;
rollback;
-- 3.Update Arjun's marks
update students
set marks = 94
where student_name='Arjun';
-- 4.Partial Rollback Using SAVEPOINT
start transaction;
savepoint save0;
insert into students value(4, 'Rajesh', 45);
savepoint save1;
insert into students value(5, 'Suresh', 55);
savepoint save3;
select * from students;
rollback to save1;


-- 5.Update Meera's marks
update students
set marks= 90
where student_name ='Meera';
-- 6.Rollback only second update
rollback;
-- 7.commit
commit;



























